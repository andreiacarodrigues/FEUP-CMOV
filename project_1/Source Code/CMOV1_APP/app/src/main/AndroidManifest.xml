<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.feup.cmov.aef.cmov1_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/StartAppTheme" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/StartAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainMenuActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activities.EventViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.TestActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.EventConfirmActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.EventsViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.TicketsViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.CafeteriaViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.VouchersViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ValTicketsViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ValOrderViewActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activities.ProductViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.VouchersListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.TransactionsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.ValTicketsActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>